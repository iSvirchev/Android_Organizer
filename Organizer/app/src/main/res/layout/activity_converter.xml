<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Converter">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <EditText
        android:id="@+id/oz_tv"
        android:hint="@string/ounces"
        android:importantForAutofill="no"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginTop="210dp"
        android:layout_marginEnd="64dp"
        android:ems="10"
        android:gravity="center"
        android:inputType="numberDecimal"
        android:maxLength="15"
        android:tag="us.fl.oz"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imp_tv" />

    <EditText
        android:id="@+id/ml_tv"
        android:hint="@string/milliliters"
        android:importantForAutofill="no"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="210dp"
        android:ems="10"
        android:gravity="center"
        android:inputType="numberDecimal"
        android:maxLength="15"
        android:tag="ml"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/metric_tv" />

    <TextView
        android:id="@+id/ml_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="264dp"
        android:text="@string/ml"
        app:layout_constraintStart_toEndOf="@+id/kg_tv"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/oz_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="264dp"
        android:text="@string/fl_oz_us"
        app:layout_constraintStart_toEndOf="@+id/lb_tv"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/fahrenheit_tv"
        android:hint="@string/fahrenheit"
        android:importantForAutofill="no"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="64dp"
        android:ems="10"
        android:gravity="center"
        android:inputType="numberDecimal|numberSigned"
        android:maxLength="3"
        android:tag="fahren"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imp_tv" />

    <EditText
        android:id="@+id/celsius_tv"
        android:hint="@string/celsius"
        android:importantForAutofill="no"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="150dp"
        android:ems="10"
        android:gravity="center"
        android:inputType="numberDecimal|numberSigned"
        android:maxLength="3"
        android:tag="cel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/metric_tv" />

    <TextView
        android:id="@+id/celsius_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="204dp"
        android:text="@string/c"
        app:layout_constraintStart_toEndOf="@id/celsius_tv"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fahren_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="204dp"
        android:text="@string/f"
        app:layout_constraintStart_toEndOf="@+id/fahrenheit_tv"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/gallon_tv"
        android:hint="@string/gallons"
        android:importantForAutofill="no"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="64dp"
        android:ems="10"
        android:gravity="center"
        android:inputType="numberDecimal"
        android:maxLength="15"
        android:tag="gallon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imp_tv" />

    <TextView
        android:id="@+id/gallon_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="148dp"
        android:text="@string/gal"
        app:layout_constraintStart_toEndOf="@+id/lb_tv"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/liter_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="144dp"
        android:text="@string/l"
        app:layout_constraintStart_toEndOf="@+id/kg_tv"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/liter_tv"
        android:hint="@string/liters"
        android:importantForAutofill="no"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="90dp"
        android:ems="10"
        android:gravity="center"
        android:inputType="numberDecimal"
        android:maxLength="15"
        android:tag="liter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/metric_tv" />

    <TextView
        android:id="@+id/metric_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="@string/metric"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/imp_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="87dp"
        android:gravity="center"
        android:text="@string/imperial"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/kg_tv"
        android:hint="@string/kilograms"
        android:importantForAutofill="no"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:gravity="center"
        android:inputType="numberDecimal"
        android:maxLength="15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/metric_tv"
        android:tag="kg"/>

    <EditText
        android:id="@+id/lb_tv"
        android:hint="@string/pounds"
        android:importantForAutofill="no"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="64dp"
        android:ems="10"
        android:gravity="center"
        android:inputType="numberDecimal"
        android:maxLength="15"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imp_tv"
        android:tag="lb"/>

    <TextView
        android:id="@+id/kg_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:text="@string/kg"
        app:layout_constraintStart_toEndOf="@+id/kg_tv"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lb_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:text="@string/lb"
        app:layout_constraintStart_toEndOf="@+id/lb_tv"
        app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>